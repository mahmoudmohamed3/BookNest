@model IEnumerable<Book>

@{
    ViewData["Title"] = "Games";
}

<a class="btn btn-info" asp-action="Create" asp-controller="Book">
    <i class="bi bi-patch-plus"></i>
    Add Book
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Books!</h4>
        <p class="mb-0">No Books were added yet.</p>
    </div>
}
else
{
    <div class="mt-5">
        <table class="table table-bordered border-primary">
            <tbody>
                @foreach (var book in Model)
                {
                    <tr class="border-1 border-success">
                        <td>
                            <div class="d-flex">
                                <div class="pe-4">
                                    <img src="@($"{FileSettings.ImagePath}/{book.Cover}")" alt="@book.Name" style="max-width:90px" />

                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h4 class="text-light">@book.Name</h4>
                                    <h5>@book.Category.Name</h5>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-end">
                                <a class="btn btn-info rounded rounded-3 me-2" asp-action="Edit" asp-controller="Book" asp-route-id="@book.Id">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <form asp-action="Delete" asp-controller="Book" asp-route-id="@book.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger rounded rounded-3">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </form>

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}