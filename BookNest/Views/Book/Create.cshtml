@model CreateBookFormViewModel
@{
    ViewData["Title"] = "Add Book";
}


<h4>
    <i class="bi bi-plus-square"></i>
    Add a New Book
</h4>


<form asp-action="Create" asp-controller="Book" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-6">


            <div mb-4">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div mb-4">
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                    <option>Select a Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>


            <div mb-4">
                <label asp-for="SelectedAuthors" class="form-label mt-4"></label>
                <select class="form-select" asp-for="SelectedAuthors" asp-items="Model.Authors">
                    
                </select>
                <span asp-validation-for="SelectedAuthors" class="text-danger"></span>
            </div>


            <div mb-4">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div mb-4">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input asp-for="Cover" type="file" class="form-control" />
                <small class="form-text text-muted">Only .JPEG, .JPG, .PNG files are allowed with max size 1MB.</small>
                <span asp-validation-for="Cover" class="text-danger d-block"></span>
            </div>


            <button type="submit" class="btn btn-primary text-black mt-4"> Save</button>
        </div>


        <div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
            <img class="cover-preview d-none" alt="Cover" style="max-width: 100%; max-height: 500px; object-fit: cover;" />
        </div>
    </div>
</form>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Cover').on('change', function () {
                $('.cover-preview').attr('src', window.URL.createObjectURL(this.files[0])).removeClass('d-none');
            })
        });
    </script>
}